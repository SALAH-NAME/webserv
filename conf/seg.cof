#multiple cgi + sessions and cookies
error_page 400 /home/karim/Desktop/webserv/www/ErrorPages/Bad-Request.html;
error_page 403 /home/karim/Desktop/webserv/www/ErrorPages/Forbidden.html;
error_page 301 /home/karim/Desktop/webserv/www/ErrorPages/Moved-Permanently.html;
error_page 404 /home/karim/Desktop/webserv/www/ErrorPages/Non-Found.html;

server {
	listen 8080;
	host 127.0.0.1;
	location / {
		error_page 502 errorPage.html;
		allowed_methods GET POST;
		root /home/karim/Desktop/webserv/www/bonusPages/;
		autoindex on;
		index bonus.html;
	}

	location /old {
		return 301 /;
	}

	location ~ .py {
		root /home/karim/Desktop/webserv/www/bonusPages/cgi/python/;
		allowed_methods GET POST DELETE;
		cgi_pass /usr/bin/python3;
		cgi_timeout 80;
	}

	location ~ .sh {
		root /home/karim/Desktop/webserv/www/bonusPages/cgi/bash/;
		allowed_methods GET POST DELETE;
		cgi_pass /usr/bin/bash;
		cgi_timeout 80;
	}

	location ~ .php {
		root /home/karim/Desktop/webserv/www/bonusPages/cgi/php/;
		cgi_pass /usr/bin/php;
		cgi_timeout 80;
	}
}